@{
    // Layout = "~/Views/Shared/Partials/_BorrowerLayout.cshtml";
    ViewData["Title"] = "Welcome to ShelfMaster";
}

<div class="container mt-3">
    <div class="row gx-5">
        <div class="col-12 col-md-6 col-lg-4">
            @await Html.PartialAsync("~/Views/Shared/Partials/_Sidebar.cshtml")

         </div>

        <div class="col-12 col-md-6 col-lg-8">
            <div class="p-3 bg-white rounded-3">
                <h3 class="text-color4">Dashboard</h3>
                @await Html.PartialAsync("~/Views/Shared/Partials/_ToastNotification.cshtml")
            </div>

            <div class="col-12 mt-2">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card text-black bg-white mb-3 w-100 border-0">
                            <div class="card-body d-flex justify-content-between align-items-center" style="height:10rem;">
                                <div>
                                    <p class="mb-0 text-muted">Total Borrowed Books</p>
                                    <h6 class="display-4">@ViewData["TotalBorrowed"]</h6>
                                </div>
                                <i class="ri-book-2-fill text-color3" style="font-size: 3rem;"></i>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card text-black bg-white mb-3 w-100 border-0">
                            <div class="card-body d-flex justify-content-between align-items-center" style="height:10rem;">
                                <div>
                                    <p class="mb-0 text-muted">Total Overdue Books</p>
                                    <h6 class="display-4">@ViewData["TotalOverdue"]</h6>
                                </div>
                                <i class="ri-time-fill text-color3" style="font-size: 3rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

