@model X.PagedList.IPagedList<test.Models.OverdueViewModel>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Overdue Books";
}

<div class="container mt-3">
    <div class="row gx-5">
        <div class="col-12 col-md-6 col-lg-4">
            @await Html.PartialAsync("~/Views/Shared/Partials/_Sidebar.cshtml")

        </div>

        <div class="col-12 col-md-6 col-lg-8">
            <div class="p-3 bg-white rounded-3">
                <h3 class="text-color4">Overdue Books</h3>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="row mt-3 gx-3">
                    @foreach (var overdue in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 col-lg-4">
                            <div class="card">
                                <img src="~/@overdue.BookCover" class="card-img-top" style="height: 15rem;" alt="@overdue.BookCover">
                                <div class="card-body">
                                    <h5 class="card-title">@overdue.BookTitle</h5>
                                    <p class="card-text">by @overdue.Author</p>
                                    <a asp-action="OverdueDetails" asp-route-id="@overdue.Id" class="btn btn-sm bg-color3">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-end mt-3">
                    @Html.PagedListPager(Model, page => Url.Action("Overdue", new { page, searchQuery = Context.Request.Query["searchQuery"] }),
                             new PagedListRenderOptions
                {
                    LiElementClasses = new[] { "page-item", "custom-page-item" },
                    PageClasses = new[] { "page-link", "custom-page-link" }
                })
                </div>
            }
            else
            {
                <div class="mt-4 p-3 bg-light text-center">
                    <h5 class="text-muted">No overdue books found.</h5>
                </div>
            }
          
           
        </div>
    </div>
</div>
