<div class="modal fade" id="DeleteAccount-@Model.Id" tabindex="-1" aria-labelledby="DeleteAccount" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeleteAccount">Delete Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Account" asp-action="DeleteAccount" method="post">
                <div class="modal-body">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <p>
                        Are you sure you want to delete your account? <br>
                        <span class="fw-bold text-danger">This action is irreversible.</span> Once deleted, all personal information, borrowing history, and transaction records associated with this account will be <span class="fw-bold text-danger">permanently removed</span>.
                    </p>
                    <p class="text-warning"><i class="ri-error-warning-line me-1"></i> This cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn bg-color1" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" id="deleteButton">Delete Account</button>
                </div>
            </form>
        </div>
    </div>
</div>
