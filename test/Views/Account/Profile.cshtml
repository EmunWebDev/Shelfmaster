@model test.Models.BorrowerViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <ul class="nav nav-tabs" id="profileTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Query["tab"] == "settings" ? "" : "active") text-color3" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Query["tab"] == "settings" ? "active" : "") text-color3" id="settings-tab" data-bs-toggle="tab" href="#settings" role="tab">Account Settings</a>
                </li>
            </ul>
         

            <div class="tab-content mt-3">
                <!-- Profile Information -->
                <div class="tab-pane fade @(Context.Request.Query["tab"] == "settings" ? "" : "show active")" id="profile" role="tabpanel">
                    <form id="profileForm">
                    <div class="card shadow-sm p-4">
                        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Partials/_ToastNotification.cshtml")
                        <h3 class="text-color4 mb-3">Profile Information</h3>
                        <div class="text-center">
                            <img src="~/images/user.png" class="rounded-circle mb-3" width="120" alt="Profile Picture">
                            <p><strong>Member Since:</strong> @Model.CreatedAt.ToString("MMMM yyyy")</p>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label>Name</label>
                                <input asp-for="Name" type="text" class="form-control" value="@Model.Name" disabled/>
                            </div>
                            <div class="col">
                                <label>Birth Date</label>
                                <input asp-for="BirthDate" type="date" class="form-control"
                                        value="@Model.BirthDate?.ToString("yyyy-MM-dd")" disabled />
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <label>Contact Number</label>
                                <input asp-for="ContactNum" type="text" class="form-control" value="@Model.ContactNum" disabled />
                            </div>
                            <div class="col">
                                <label>Gender</label>
                                <input asp-for="Gender" type="text" class="form-control" value="@Model.Gender" disabled />
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <label>Username</label>
                                <input asp-for="Username" type="text" class="form-control" value="@Model.Username" disabled />
                            </div>
                            <div class="col">
                                <label>Email Address
                                    <span>
                                        @if (Model.IsVerified == true)
                                        {
                                            <span class="badge bg-success ms-2">
                                                Verified
                                            </span>
                                        }
                                    </span>
                                </label>
                                <input asp-for="Email" type="email" class="form-control" value="@Model.Email" readonly disabled />
                            </div>                
                        </div>

                        <div class="text-end mt-3">
                            <button id="editProfileBtn" class="btn bg-color3" type="button">Edit Profile</button>
                        </div>
                    </div>
                </form>
                </div>

                <!-- Account Settings -->
                <div class="tab-pane fade @(Context.Request.Query["tab"] == "settings" ? "show active" : "")" id="settings" role="tabpanel">
                    <div class="card shadow-sm p-4">
                        <h3 class="text-color4 mb-3">Account Settings</h3>

                        <div class="list-group" style="cursor:pointer">
                            <a asp-action="ChangeEmail" asp-route-id="@(Model.Id ?? 0)" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="ri-mail-fill text-warning me-3 fs-5"></i> Change Email
                            </a>
                            <a asp-action="ChangePassword" asp-route-id="@(Model.Id ?? 0)" class="list-group-item list-group-item-action d-flex align-items-center">
                                <i class="ri-key-fill text-warning me-3 fs-5"></i> Change Password
                            </a>
                            <a asp-controller="Auth" asp-action="Setup2FA" class="list-group-item list-group-item-action d-flex align-items-center text-success">
                                <i class="ri-shield-keyhole-fill me-3 fs-5"></i>
                                @(Model.IsTwoFactorEnabled ? "Manage 2FA" : "Enable 2FA / OTP")
                            </a>
                        </div>                   
                    </div>
                </div>


                <!--Toast Message-->
                <div class="toast align-items-center bg-success border-0 position-fixed bottom-0 end-0" style="margin: 1rem;" role="alert" aria-live="assertive" aria-atomic="true" id="toast">
                    <div class="d-flex">
                        <div class="toast-body text-white d-flex align-items-center">
                            <i id="toast-icon" class="fs-5 text-white rounded-3"></i>
                            <span id="toast-message" class="ms-2"></span>
                        </div>

                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("~/Views/Account/DeleteAccount.cshtml")
<script>
    document.getElementById("editProfileBtn").addEventListener("click", function () {
        let inputs = document.querySelectorAll("#profile input");
        let button = document.getElementById("editProfileBtn");

        if (button.textContent === "Edit Profile") {
            inputs.forEach(input => input.removeAttribute("disabled"));
            button.textContent = "Save Changes";
            button.classList.remove("bg-color3");
            button.classList.add("btn-success");
        } else {
            let profileData = {
                Id: @Model.Id,
                Name: document.querySelector("input[name='Name']").value || null,
                BirthDate: document.querySelector("input[name='BirthDate']").value || null,
                ContactNum: document.querySelector("input[name='ContactNum']").value || null,
                Gender: document.querySelector("input[name='Gender']").value || null,
                Username: document.querySelector("input[name='Username']").value || null,
                Email: document.querySelector("input[name='Email']").value || null
            };

            $.ajax({
                url: "@Url.Action("Update")",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(profileData),
                success: function (response) {
                    if (response.success) {
                        showToast("Profile updated successfully!", true);
                    } else {
                        showToast(response.message, false);
                    }

                    inputs.forEach(input => input.setAttribute("disabled", "disabled"));
                    button.textContent = "Edit Profile";
                    button.classList.remove("btn-success");
                    button.classList.add("bg-color3");
                },
                error: function () {
                    showToast("An error occurred while updating the profile.", false);
                }
            });
        }
    });

    function showToast(message, isSuccess = true) {
        let toastEl = document.getElementById("toast");
        let toastMessage = document.getElementById("toast-message");
        let toastIcon = document.getElementById("toast-icon");

        toastMessage.textContent = message;

        if (isSuccess) {
            toastEl.classList.remove("bg-danger");
            toastEl.classList.add("bg-success");
            toastIcon.classList = "ri-checkbox-circle-fill text-white";
        } else {
            toastEl.classList.remove("bg-success");
            toastEl.classList.add("bg-danger");
            toastIcon.classList = "ri-close-circle-fill text-white";
        }

        let toast = new bootstrap.Toast(toastEl);
        toast.show();
    }

</script>
