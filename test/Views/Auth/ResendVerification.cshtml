@{
    ViewData["Title"] = "Verify Email";
}

<section class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 text-center" style="max-width: 500px;">
        <h2 class="fw-bold">Email Verification Needed</h2>
        <p class="fs-5 mt-3">
            Thank you for registering! A verification link has been sent to your email.
            Please check your inbox and click the link to activate your account.
        </p>
        <p class="text-muted">Didn't receive the email?</p>

            <form asp-controller="Auth" asp-action="ResendVerification" method="post">
                <input type="email" name="email" class="form-control mb-2" placeholder="Enter your email" required>
                <button type="submit" class="btn bg-color4 text-white">Resend Verification Email</button>
            </form>

        <p class="mt-3">
            You may close this page once your email is verified. Happy reading! 📚
        </p>
    </div>
    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Partials/_ToastNotification.cshtml")

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
