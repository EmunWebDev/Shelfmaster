@model test.Entity.User

@{
    ViewData["Title"] = "Login";
}

<section class="">
    <div class="px-4 py-5 px-md-5 text-center text-lg-start">
        <div class="container">
            @{
                var verified = Context.Request.Query["verified"].ToString();
            }

            @if (verified == "success")
            {
                <div class="alert alert-success mt-3" role="alert">
                    🎉 Your email has been successfully verified! You can now log in.
                </div>
            }
            else if (verified == "already")
            {
                <div class="alert alert-info mt-3" role="alert">
                    ✅ Your account is already verified. Please log in.
                </div>
            }

            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        Your gateway to <br />
                        <span class="text-color3">endless knowledge</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Welcome to ShelfMaster – your ultimate library management solution.
                        Unlock the power of seamless library management with a system designed to simplify organization, improve accessibility, and inspire learning.
                    </p>
                </div>

                <div class="col-lg-5 mb-5 mb-lg-0">
                    <div class="card">
                        @await Html.PartialAsync("~/Views/Shared/Partials/_ToastNotification.cshtml")
                        <div class="card-body py-3 px-md-5">
                            <div class="d-flex align-items-center justify-content-start mb-4">
                                <img src="~/images/logo/logo1.png" width="100" alt="ShelfMaster Logo" />
                                <h3 class="ms-3 mb-0 fw-bold text-center">Log In</h3>
                            </div>
                            <form asp-action="Login" method="post">
                                <div class="mb-3">
                                    <label for="Email" class="form-label">Email address</label>
                                    <input name="Email" type="email" class="form-control" id="Email" aria-describedby="emailHelp">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="Password" class="form-label">Password</label>
                                    <input name="Password" type="password" class="form-control" id="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="mb-3 form-check">
                                    <div class="row">
                                        <div class="col">
                                            <input name="RememberMe" type="checkbox" class="form-check-input" id="exampleCheck1">
                                            <label class="form-check-label" for="exampleCheck1">Remember me</label>
                                        </div>
                                        <div class="col text-end">
                                            <a class="text-decoration-none" asp-action="FindAccount">Forgot password?</a>
                                        </div>
                                    </div>
                                </div>

                                <!-- ✅ Updated Login Button -->
                                <button type="submit" id="btn-Login" class="btn action-btn btn-login mt-3 w-100" aria-label="Login to the system">
                                    LOGIN
                                </button>

                                <p class="mt-3">
                                    Not a member?
                                    <a asp-controller="Auth" asp-action="Register" class="text-color3 fw-bold text-decoration-none">Register</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
