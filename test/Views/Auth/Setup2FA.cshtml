@{
    ViewData["Title"] = "Setup Two-Factor Authentication";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <h2>@ViewData["Title"]</h2>
                <p class="text-muted">
                    Scan the QR code below using your authenticator app (Google Authenticator, Authy, etc.) to link your account.
                </p>
            </div>

            <!-- QR Code Card -->
            <div class="card mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">QR Code</h5>
                    @if (ViewBag.QrCodeImage != null)
                    {
                        <div class="d-flex justify-content-center">
                            <img src="@ViewBag.QrCodeImage" alt="QR Code for 2FA Setup" class="img-fluid" style="max-width: 200px;" />
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-center align-items-center" style="height: 200px;">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <span class="ms-2">Loading QR code...</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Verification Form Card -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Verification</h5>
                    <form method="post" asp-action="Verify2FA">
                        <div class="form-group mb-3">
                            <label for="code" class="form-label">Enter the code from your authenticator app:</label>
                            <input type="text" class="form-control text-center" id="code" name="code"
                                   placeholder="123456" maxlength="6" required autocomplete="off" />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Verify</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Text -->
            <div class="mt-3 text-center">
                <small class="text-muted">
                    Don't have an authenticator app? Download Google Authenticator or Microsoft Authenticator from your app store.
                </small>
            </div>
        </div>
    </div>
</div>