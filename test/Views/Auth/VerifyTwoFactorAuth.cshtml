@{
    ViewData["Title"] = "Verify Two-Factor Authentication";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Title -->
            <div class="text-center mb-4">
                <h2 class="fw-bold">@ViewData["Title"]</h2>
                <p class="text-muted">
                    Please enter the 6-digit code from your authenticator app to complete your login.
                </p>
            </div>

            <!-- Verification Card -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-center mb-3">Enter 2FA Code</h5>

                    <form method="post" asp-action="VerifyTwoFactorAuth">
                        <div class="form-group mb-3">
                            <label for="code" class="form-label">Authenticator Code:</label>
                            <input type="text"
                                   id="code"
                                   name="otpcode"
                                   class="form-control text-center"
                                   placeholder="123456"
                                   maxlength="6"
                                   inputmode="numeric"
                                   pattern="\d{6}"
                                   required
                                   autofocus
                                   autocomplete="off" />
                        </div>

                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger text-center" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Verify</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <small class="text-muted">
                    Open your authenticator app (Google Authenticator, Authy, etc.) and use the current code shown for your account.
                </small>
            </div>
        </div>
    </div>
</div>
