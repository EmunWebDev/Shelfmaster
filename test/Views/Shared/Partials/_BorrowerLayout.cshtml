@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SHELFMASTER_BORROWERS_IT15</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/borrower.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/SHELFMASTER_BORROWERS_IT15.styles.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex flex-column min-vh-100">


    <!-- Navbar -->
    <nav>
        @await Html.PartialAsync("/Views/Shared/Partials/_Navbar.cshtml")
    </nav>

    <!-- Layout Container -->
    <div class="d-flex flex-grow-1 flex-column flex-md-row">

        <!-- Sidebar -->
        <aside>
            @await Html.PartialAsync("/Views/Shared/Partials/_Sidebar.cshtml")
        </aside>

        <!-- Main Content -->
        <main role="main" class="flex-grow-1 p-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        @await Html.PartialAsync("/Views/Shared/Partials/_Footer.cshtml")
    </footer>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
