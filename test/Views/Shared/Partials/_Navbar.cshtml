@using System.Security.Claims
@if (Context.User.Identity.IsAuthenticated)
{
    <div class="container-fluid position-relative p-0">
        <img src="~/images/banner3.png" class="img-fluid w-100" style="object-fit: cover; height:9rem;" alt="Banner">

        <div class="position-absolute top-50 start-0 translate-middle-y w-100">
            <div class="container text-white">
                <h1 class="fw-bold fs-3">
                    WELCOME TO <span class="text-color5">SHELFMASTER</span>,
                    <span class="d-inline-block">
                        @Context.User.Identity.Name
                    </span>
                </h1>
                <p class="fs-0.8">Your gateway to <span class="text-color5">endless knowledge</span></p>
            </div>
        </div>
    </div>

    <nav class="navbar px-5 navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">
                <img src="~/images/logo/logo2.0.png" width="150" alt="ShelfMaster Logo" />
            </a>
            <div class="dropdown d-flex">
                <a class="btn bg-color1 d-flex align-items-center border-0" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="~/images/logo/user.png" alt="Profile" class="rounded-circle me-2" width="20" height="20" />

                    <!-- Name + Borrower Badge inside oval -->
                    <div class="d-flex flex-column align-items-start">
                        <span>@Context.User.Identity.Name</span>
                        <span class="badge rounded-pill bg-light text-dark mt-1 px-3 py-1">Borrower</span>
                    </div>

                    <i class="ri-arrow-down-s-line ms-2"></i>
                </a>
                <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                    <a class="dropdown-item" asp-controller="Account" asp-action="Profile" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Profile</a>
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)" asp-route-tab="settings">Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form id="logout-form" method="post" asp-action="Logout" asp-controller="Auth">
                            <button type="submit" class="dropdown-item text-color4">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}
