@model X.PagedList.IPagedList<test.Entity.Vendor>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Vendors";
    ViewData["Navigation Title"] = "Vendors";
}

<div class="row mt-5 g-3">
    <div class="col-12">
        <div class="row g-0">
            <div class="col-12 col-md-12 col-xl-12 mb-2 text-end align-items-center">
                <div class="d-flex justify-content-end h-100">
                    <a asp-controller="Vendor" asp-action="New"
                       class="btn bg-color3 text-color4 px-3 border-0 d-flex justify-content-center align-items-center"
                       title="Add new vendor"
                       style="border-radius: 15px;">
                        <i class="ri-add-circle-line"></i>
                        <span class="ms-1 fw-bold d-sm-block d-none">New</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                @await Html.PartialAsync("~/Views/Shared/Partials/_ToastNotification.cshtml")

                <div class="row align-items-center">
                    <div class="col-md-4 mb-3 mb-md-0">
                        <form asp-controller="Vendor" asp-action="Index" method="get" class="d-flex">
                            <div class="input-group">
                                <button class="btn bg-color3" id="search" type="submit">
                                    <i class="ri-search-line"></i>
                                </button>
                                <input type="text" name="searchQuery" value="@Context.Request.Query["searchQuery"]"
                                       class="form-control" placeholder="Search by Vendor Name or Email" aria-describedby="search">
                            </div>
                        </form>
                    </div>
                </div>

                <div class="table-responsive mt-3 w-100">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th><i class="ri-settings-line"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var vendor in Model)
                                {
                                    <tr>
                                        <td>@vendor.Id</td>
                                        <td>@vendor.Name</td>
                                        <td>@vendor.ContactNumber</td>
                                        <td>@vendor.Email</td>
                                        <td>@vendor.Address</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn bg-white p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="ri-more-2-fill"></i>
                                                </button>
                                                <ul class="dropdown-menu" style="cursor:pointer;">
                                                    <!-- Edit Vendor -->
                                                    <li>
                                                        <a asp-controller="Vendor" asp-action="Edit" asp-route-id="@vendor.Id" class="dropdown-item">
                                                            Edit Details
                                                        </a>
                                                    </li>

                                                    <!-- Archive Vendor (instead of delete immediately) -->
                                                    <li>
                                                        <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#archiveVendor-@vendor.Id">
                                                            Move to Archive
                                                        </a>
                                                    </li>

                                                    <!-- Delete Vendor -->
                                                    <li>
                                                        <a class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#deleteVendor-@vendor.Id">
                                                            Delete Vendor
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-muted">No vendors found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-end mt-3">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchQuery = Context.Request.Query["searchQuery"] }),
                        new PagedListRenderOptions
                        {
                            LiElementClasses = new[] { "page-item", "custom-page-item" },
                            PageClasses = new[] { "page-link", "custom-page-link" }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Modal for Delete Confirmation *@
@foreach (var vendor in Model)
{
    <div class="modal fade" id="deleteVendor-@vendor.Id" tabindex="-1" aria-labelledby="deleteVendorLabel-@vendor.Id" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteVendorLabel-@vendor.Id">Delete Vendor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete <strong>@vendor.Name</strong>?
                </div>
                <div class="modal-footer">
                    <form asp-controller="Vendor" asp-action="Delete" asp-route-id="@vendor.Id" method="post">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
