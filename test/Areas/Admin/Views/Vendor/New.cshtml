@model test.Entity.Vendor

@{
    ViewData["Title"] = "Add New Vendor";
    ViewData["Navigation Title"] = "Add New Vendor";
}

<div class="row mt-5 g-3">
    <div class="col-12">
        <div class="card border-0 shadow-sm h-100 overflow-auto">
            <form asp-action="CreateVendor" asp-controller="Vendor" method="post">
                @Html.AntiForgeryToken()

                <div class="card-body">
                    @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Partials/_ToastNotification.cshtml")

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col">
                            <label>Name</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Vendor name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <label>Contact Person</label>
                            <input asp-for="ContactPerson" type="text" class="form-control" placeholder="Contact person">
                            <span asp-validation-for="ContactPerson" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <label>Contact Number</label>
                            <input asp-for="ContactNumber" type="text" class="form-control" placeholder="Contact number">
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label>Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <label>Address</label>
                            <textarea asp-for="Address" class="form-control" rows="2" placeholder="Vendor address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-start">
                        <a asp-controller="Vendor" asp-action="Index" class="btn bg-color1 me-2 px-3">Cancel</a>
                        <button type="submit" class="btn bg-color3 fw-bold px-5">Add Vendor</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
