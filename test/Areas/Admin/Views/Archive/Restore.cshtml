@foreach (var unavailableBook in Model)
{
    <div class="modal fade" id="restoreBook-@unavailableBook.Id" tabindex="-1" aria-labelledby="restoreBook" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="restoreBook">Restore Book</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <form asp-controller="Archive" asp-action="Restore" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="Id" value="@unavailableBook.Id" />

                        <p>
                            You are about to <span class="text-success fw-bold">restore</span> the book:
                            <strong>@unavailableBook.Title</strong> by <strong>@unavailableBook.Author.Name</strong>.
                        </p>

                        <p>
                            Once restored, this book will become available for borrowing again.
                            If you do not wish to restore it, simply keep it in the archive.
                        </p>

                        <p class="fw-bold">Do you want to proceed with restoring this book?</p>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn bg-color1" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Yes, Restore Book</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
}
