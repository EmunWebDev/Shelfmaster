   
<aside id="sidebar" class="expand">
    <div class="d-flex align-items-center">
        <img src="~/images/logo/icon.png" class="sidebar-logo-img" alt="Logo" width="50" />

        <div class="sidebar-logo">
            <div class="sidebar-logo-text">
                <a href="#" class="shelfmaster">ShelfMaster</a>
            </div>
        </div>
    </div>
    

    <ul class="sidebar-nav">
        <!-- Visible to Admin and Librarian -->
        <li class="sidebar-item">
            <a asp-controller="Dashboard" asp-action="Index" class="sidebar-link @(test.Helpers.HtmlHelper.ActiveClass(ViewContext, "Dashboard", "Index"))">
                <i class="ri-dashboard-line"></i>
                <span>Dashboard</span>
            </a>
        </li>

        <li class="sidebar-item">
            <a asp-controller="Lending" asp-action="Issue" class="sidebar-link @(test.Helpers.HtmlHelper.ActiveClass(ViewContext, "Lending", "Issue"))">
                <i class="ri-send-plane-2-line"></i>
                <span>Borrow Book</span>
            </a>
        </li>

        @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
        {
            <!-- Book Management -->
            <li class="sidebar-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Book" ? "active" : "")">
                <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                   data-bs-target="#booksMenu" aria-expanded="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Book")"
                   aria-controls="booksMenu">
                    <i class="ri-book-2-line"></i>
                    <span>Book Management</span>
                </a>
                <ul id="booksMenu" class="sidebar-dropdown list-unstyled collapse @(ViewContext.RouteData.Values["controller"]?.ToString() == "Book" ? "show" : "")" data-bs-parent="#sidebar">
                    <li class="sidebar-item">
                        <a asp-controller="Book" asp-action="Index" class="sidebar-link @(test.Helpers.HtmlHelper.ActiveClass(ViewContext, "Book", "Index"))">
                            All Books
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Book" asp-action="AuthorList" class="sidebar-link @(test.Helpers.HtmlHelper.ActiveClass(ViewContext, "Book", "AuthorList"))">
                            Authors
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Book" asp-action="PublisherList" class="sidebar-link @(test.Helpers.HtmlHelper.ActiveClass(ViewContext, "Book", "PublisherList"))">
                            Publishers
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Book" asp-action="GenreList" class="sidebar-link @(test.Helpers.HtmlHelper.ActiveClass(ViewContext, "Book", "GenreList"))">
                            Genres
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Book" asp-action="ObsoleteBooks"
                           class="sidebar-link @(test.Helpers.HtmlHelper.ActiveClass(ViewContext, "Book", "ObsoleteBooks"))">
                            Obsolete Books
                        </a>
                    </li>


                </ul>
            </li>

            <!-- Procurement -->
            <li class="sidebar-item">
                <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                   data-bs-target="#procurementMenu">
                    <i class="ri-shopping-cart-2-line"></i>
                    <span>Procurement</span>
                </a>
                <ul id="procurementMenu" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="sidebar-item">
                            <a asp-controller="Vendor" asp-action="Index" class="sidebar-link">Vendors</a>
                        </li>
                    }

                    <li class="sidebar-item">
                        <a asp-controller="Acquisition" asp-action="Index" class="sidebar-link">Acquisition</a>
                    </li>

                    <li class="sidebar-item">
                        <a asp-controller="Acquisition" asp-action="Recommendations" class="sidebar-link">Recommendations</a>
                    </li>


                </ul>
            </li>

            <!-- Borrower -->
            <li class="sidebar-item">
                <a asp-controller="Borrower" asp-action="Index" class="sidebar-link">
                    <i class="ri-team-line"></i>
                    <span>Borrower</span>
                </a>
            </li>

            <!-- Lending Management -->
            <li class="sidebar-item">
                <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                   data-bs-target="#lending">
                    <i class="ri-arrow-up-down-line"></i>
                    <span>Lending Management</span>
                </a>
                <ul id="lending" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                    <li class="sidebar-item">
                        <a asp-controller="Lending" asp-action="TransactionsIndex" class="sidebar-link">Transactions</a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Lending" asp-action="OverdueIndex" class="sidebar-link">Overdue Tracking</a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Lending" asp-action="Payments" class="sidebar-link">Payment Status</a>
                    </li>
                </ul>
            </li>
        }

        @if (User.IsInRole("Admin"))
        {
            <!-- Reports -->
            <li class="sidebar-item">
                <a asp-controller="Report" asp-action="Index" class="sidebar-link">
                    <i class="ri-bar-chart-box-line"></i>
                    <span>Reports</span>
                </a>
            </li>

            <!-- Audit Logs -->
            <li class="sidebar-item">
                <a asp-controller="Log" asp-action="Index" class="sidebar-link">
                    <i class="ri-file-history-line"></i>
                    <span>Audit Logs</span>
                </a>
            </li>

            <!-- Archive -->
            <li class="sidebar-item">
                <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                   data-bs-target="#archiveMenu">
                    <i class="ri-archive-line"></i>
                    <span>Archive</span>
                </a>
                <ul id="archiveMenu" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                    <li class="sidebar-item"><a asp-controller="Archive" asp-action="Index" class="sidebar-link">Archived Books</a></li>
                    <li class="sidebar-item"><a asp-controller="Archive" asp-action="CopiesIndex" class="sidebar-link">Archived Copies</a></li>
                    <li class="sidebar-item"><a asp-controller="Archive" asp-action="DeletedCopies" class="sidebar-link">Deleted Copies</a></li>
                </ul>
            </li>

            <!-- System Config -->
            <li class="sidebar-item">
                <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                   data-bs-target="#system">
                    <i class="ri-settings-3-line"></i>
                    <span>System Configuration</span>
                </a>
                <ul id="system" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                    <li class="sidebar-item">
                        <a asp-controller="User" asp-action="Index" class="sidebar-link">User Management</a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Borrower" asp-action="Archived" class="sidebar-link">Archived Users</a>
                    </li>
                </ul>
            </li>
        }
    </ul>

    <!--
    <div class="sidebar-footer">
        <a href="#" class="sidebar-link">
            <i class="ri-logout-box-line"></i>
            <span>Logout</span>
        </a>
    </div>
    -->
</aside>
 