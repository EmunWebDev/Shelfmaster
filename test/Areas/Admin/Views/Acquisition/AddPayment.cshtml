@model test.Areas.Admin.Models.AcquisitionPaymentViewModel
@{
    ViewData["Title"] = "Add Payment";
}

<h2>Add Payment - @Model.VendorName</h2>

<div class="mb-3">
    <a asp-action="Details" asp-route-id="@Model.AcquisitionId" class="btn btn-secondary">Back to Acquisition</a>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="AddPayment" method="post">
            @Html.AntiForgeryToken()

            <!-- Hidden so Payment ties back to Acquisition -->
            <input type="hidden" asp-for="AcquisitionId" />
            <input type="hidden" asp-for="NewPayment.TransactionID" />

            <div class="mb-3">
                <label asp-for="NewPayment.Amount" class="form-label"></label>
                <input asp-for="NewPayment.Amount" class="form-control" />
                <span asp-validation-for="NewPayment.Amount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPayment.Method" class="form-label"></label>
                <input asp-for="NewPayment.Method" class="form-control" />
                <span asp-validation-for="NewPayment.Method" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPayment.PaymentDate" class="form-label"></label>
                <input asp-for="NewPayment.PaymentDate" type="date" class="form-control" />
                <span asp-validation-for="NewPayment.PaymentDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Payment</button>
        </form>
    </div>

    <div class="col-md-6">
        <h4>Existing Payments</h4>
        @if (Model.ExistingPayments != null && Model.ExistingPayments.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Amount</th>
                        <th>Method</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model.ExistingPayments)
                    {
                        <tr>
                            <td>₱@payment.Amount?.ToString("N2")</td>
                            <td>@payment.Method</td>
                            <td>@payment.PaymentDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No payments recorded yet.</p>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
