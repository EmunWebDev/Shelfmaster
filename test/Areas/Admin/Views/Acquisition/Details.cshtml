@model test.Areas.Admin.Models.AcquisitionDetailsViewModel
@using System.Linq

@{
    ViewData["Title"] = "Acquisition Summary";
}

<div class="container mt-5">

    <div class="card border-0 shadow-sm">
        <div class="card-body">

            <!-- Breadcrumb: Acquisition Request > Details -->
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Acquisition", new { area = "Admin" })" class="text-decoration-none">
                            Acquisition Request
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Details</li>
                </ol>
            </nav>

            <table class="table table-bordered table-striped text-center align-middle">
                <!-- header uses theme color -->
                <thead style="background-color: var(--color3); color: white;">
                    <tr>
                        <th>Acquisition #</th>
                        <th>Vendor</th>
                        <th>Notes</th>
                        <th>Total Cost</th>
                        <th>Payment</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Acquisition.Id</td>
                        <td>@Model.Acquisition.Vendor?.Name</td>
                        <td>@Model.Acquisition.Notes</td>
                        <td>₱@(Model.Acquisition.TotalCost?.ToString("N2") ?? "0.00")</td>

                        <!-- Payment info -->
                        <td>
                            @{
                                var p = Model.AcquisitionPayments?.FirstOrDefault();
                            }

                            @if (p != null)
                            {
                                <div>
                                    ₱@p.Amount.ToString("N2")<br />
                                    <small>@(p.PaymentMethod) — @(p.PaymentDate.ToString("MMM dd, yyyy"))</small><br />
                                    <small>Recorded By: @p.RecordedById</small>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">No payment recorded</span>
                            }
                        </td>

                        <td>
                            @if (Model.AcquisitionPayments != null && Model.AcquisitionPayments.Any())
                            {
                                <span class="badge bg-success">Paid</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
</div>
