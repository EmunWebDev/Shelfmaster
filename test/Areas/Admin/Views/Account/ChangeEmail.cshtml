@model test.Areas.Admin.Models.BorrowerViewModel

@{
    ViewData["Title"] = "Profile";
    ViewData["Navigation Title"] = "Change Email";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb text-color4">
                    <li class="breadcrumb-item">
                        <a asp-controller="Account" asp-action="Profile" asp-route-id="@Model.Id" asp-route-tab="settings" class="text-color3 fw-bold">Account Settings</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Change Email</li>
                </ol>
            </nav>
            <div class="card shadow-sm p-4">
                <form asp-action="ChangeEmail" method="post">
                    <input type="hidden" asp-for="Id" />

                    <h3 class="text-color4 mb-3">Change Email</h3>

                    <div class="row mt-3">
                        <div class="col">
                            <span>Current Email: </span>
                        </div>
                        <div class="col">
                            <h5>@Model.Email</h5>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <span>New Email: </span>
                        </div>
                        <div class="col">
                            <input asp-for="Email" type="email" class="form-control" value="" required/>
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                        </div>
                        <div class="col">
                            <a asp-controller="Account" asp-action="Profile" asp-route-id="@Model.Id" asp-route-tab="settings" class="btn bg-color1">Cancel</a>
                            <button type="submit" class="btn bg-color3">Save</button>
                        </div>
                    </div>
                </form>
            </div>
         </div>

    </div>
</div>