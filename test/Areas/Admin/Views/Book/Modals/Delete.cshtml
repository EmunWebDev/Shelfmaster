@foreach(var book in Model)
{
    <div class="modal fade" id="deleteBook-@book.Id" tabindex="-1" aria-labelledby="deleteBook" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteBook">Delete Book</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <form asp-controller="Book" asp-action="Delete" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="Id" value="@book.Id" />
                        <p>Are you sure you want to delete this book? This action cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn bg-color1" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger" id="deleteButton">Delete Book</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
}