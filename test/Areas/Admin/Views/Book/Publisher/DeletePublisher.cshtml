@foreach (var publisher in Model)
{
    <div class="modal fade" id="deletePublisher-@publisher.Id" tabindex="-1" aria-labelledby="deletePublisher" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteAuthor">Delete Publisher</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" action="@Url.Action("DeletePublisher", "Book", new { id = publisher.Id })">
                    <div class="modal-body">
                        <p>Are you sure you want to delete this publisher? This action cannot be undone.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn bg-color1" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger" id="deleteButton">Delete Publisher</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}