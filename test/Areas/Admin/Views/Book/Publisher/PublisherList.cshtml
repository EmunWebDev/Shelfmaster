@model X.PagedList.IPagedList<test.Entity.Publisher>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Publishers";
    ViewData["Navigation Title"] = "Publishers";
}
<div class="row mt-5 g-3">

    @if (TempData["Message"] != null)
    {
        <div class="toast align-items-center bg-white border-0 position-fixed bottom-0 end-0"
             role="alert" aria-live="assertive" aria-atomic="true" id="toast" style="margin: 1rem;">
            <div class="d-flex">
                <div class="toast-body text-color4 d-flex align-items-center">
                    <i class="ri-check-line fs-5 me-2 bg-success text-white rounded-circle"></i>
                    @TempData["Message"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }


    <div class="col-12">
        <div class="row g-0">
            <div class="col-12 col-md-12 col-xl-12 mb-2 text-end align-items-center">
                <div class="d-flex justify-content-end h-100">
                    <a data-bs-toggle="modal" data-bs-target="#newPublisher"
                       class="btn bg-color3 text-color4 px-3 border-0 d-flex justify-content-center align-items-center"
                       title="Add new publisher"
                       style="border-radius: 15px;">
                        <i class="ri-add-circle-line"></i>
                        <span class="ms-1 fw-bold d-sm-block d-none">New</span>
                    </a>

                </div>
            </div>
        </div>
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-4 mb-3 mb-md-0">
                        <form asp-controller="Book" asp-action="PublisherList" method="get" class="d-flex">
                            <div class="input-group">
                                <button class="btn bg-color3" id="search" type="submit">
                                    <i class="ri-search-line"></i>
                                </button>
                                <input type="text" name="searchQuery" value="@Context.Request.Query["searchQuery"]"
                                       class="form-control" placeholder="Search by Name" aria-describedby="search">
                            </div>
                        </form>
                    </div>
                </div>
                <div class="table-responsive mt-3 w-100">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Contact No.</th>
                                <th>Email Address</th>
                                <th>Created At</th>
                                <th>Updated At</th>
                                <th><i class="ri-settings-line"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var publisher in Model)
                                {
                                    <tr>
                                        <td>@publisher.Id</td>
                                        <td>@publisher.Name</td>
                                        <td>@publisher.Address</td>
                                        <td>@publisher.ContactNum</td>
                                        <td>@publisher.Email</td>
                                        <td>@publisher.CreatedAt.ToString("f")</td>
                                        <td>@publisher.UpdatedAt.ToString("f")</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn bg-white p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="ri-more-2-fill"></i>
                                                </button>
                                                <ul class="dropdown-menu" style="cursor:pointer;">
                                                    <li>
                                                        <a data-bs-toggle="modal" data-bs-target="#editPublisher-@publisher.Id" class="dropdown-item">
                                                            Edit
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#deletePublisher-@publisher.Id">
                                                            Delete
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">No publishers found.</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                    <div class="d-flex justify-content-end mt-3">
                        @Html.PagedListPager(Model, page => Url.Action("PublisherList", new { page, searchQuery = Context.Request.Query["searchQuery"] }),
                                 new PagedListRenderOptions
                        {
                            LiElementClasses = new[] { "page-item", "custom-page-item" },
                            PageClasses = new[] { "page-link", "custom-page-link" }
                        })
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("~/Areas/Admin/Views/Book/Publisher/NewPublisher.cshtml")
@await Html.PartialAsync("~/Areas/Admin/Views/Book/Publisher/EditPublisher.cshtml")
@await Html.PartialAsync("~/Areas/Admin/Views/Book/Publisher/DeletePublisher.cshtml")
