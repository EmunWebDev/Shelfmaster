<div class="modal fade" id="newPublisher" tabindex="-1" aria-labelledby="newPublisher" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newPublisher">Add New Publisher</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-area="Admin" asp-controller="Book" asp-action="CreatePublisher" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="publiName" class="form-label fw-bold">Name</label>
                        <input id="publiName" type="text" class="form-control" name="Name" placeholder="Enter publisher's name" required />
                    </div>
                    <div class="mb-3">
                        <label for="publiAddress" class="form-label fw-bold">Address</label>
                        <input id="publiAddress" type="text" class="form-control" name="Address" placeholder="Enter publisher's address" required />
                    </div>
                    <div class="mb-3">
                        <label for="publiContact" class="form-label fw-bold">Contact No.</label>
                        <input id="publiContact" type="text" class="form-control" name="ContactNum" placeholder="Enter publisher's contact number" required />
                    </div>
                    <div class="mb-3">
                        <label for="publiEmail" class="form-label fw-bold">Email Address</label>
                        <input id="publiEmail" type="email" class="form-control" name="Email" placeholder="Enter publisher's email" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn bg-color1" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn bg-color3 fw-bold">Add Publisher</button>
                </div>
            </form>
        </div>
    </div>
</div>
