@foreach (var publisher in Model)
{
    <div class="modal fade" id="editPublisher-@publisher.Id" tabindex="-1" aria-labelledby="editPublisher" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editPublisher">Edit Publisher's Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <form method="post" action="@Url.Action("EditPublisher", "Book", new { id = publisher.Id })">
                    <div class="modal-body">
                        <div class="mb-3">
                            <input type="hidden" class="form-control" name="Id" value="@publisher.Id" />

                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" name="Name" value="@publisher.Name" />
                        </div>
                        <div class="mb-3">
                            <label for="publiAddress" class="form-label fw-bold">Address</label>
                            <input id="publiAddress" type="text" class="form-control" name="Address" value="@publisher.Address" required />
                        </div>
                        <div class="mb-3">
                            <label for="publiContact" class="form-label fw-bold">Contact No.</label>
                            <input id="publiContact" type="text" class="form-control" name="ContactNum" value="@publisher.ContactNum" required />
                        </div>
                        <div class="mb-3">
                            <label for="publiEmail" class="form-label fw-bold">Email Address</label>
                            <input id="publiEmail" type="email" class="form-control" name="Email" value="@publisher.Address" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn bg-color1" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn bg-color3 fw-bold">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}