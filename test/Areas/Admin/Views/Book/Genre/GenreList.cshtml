@model X.PagedList.IPagedList<test.Entity.Genre>
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Genres";
    ViewData["Navigation Title"] = "Genres";
}
<div class="row mt-5 g-3">
    <div class="col-12">
        <div class="row g-0">
            <div class="col-12 col-md-12 col-xl-12 mb-2 text-end align-items-center">
                <div class="d-flex justify-content-end h-100">
                    <a data-bs-toggle="modal" data-bs-target="#newGenre"
                       class="btn bg-color3 text-color4 px-3 border-0 d-flex justify-content-center align-items-center"
                       title="Add new genre"
                       style="border-radius: 15px;">
                        <i class="ri-add-circle-line"></i>
                        <span class="ms-1 fw-bold d-sm-block d-none">New</span>
                    </a>

                </div>
            </div>
        </div>
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Partials/_ToastNotification.cshtml")
                <div class="row align-items-center">
                    <div class="col-md-4 mb-3 mb-md-0">
                        <form asp-controller="Book" asp-action="GenreList" method="get" class="d-flex">
                            <div class="input-group">
                                <button class="btn bg-color3" id="search" type="submit">
                                    <i class="ri-search-line"></i>
                                </button>
                                <input type="text" name="searchQuery" value="@Context.Request.Query["searchQuery"]"
                                       class="form-control" placeholder="Search by Name" aria-describedby="search">
                            </div>
                        </form>
                    </div>
                </div>
                <div class="table-responsive mt-3 w-100">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Created At</th>
                                <th>Updated At</th>
                                <th><i class="ri-settings-line"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var genre in Model)
                                {
                                    <tr>
                                        <td>@genre.Id</td>
                                        <td>@genre.Name</td>
                                        <td>@genre.CreatedAt.ToString("f")</td>
                                        <td>@genre.UpdatedAt.ToString("f")</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn bg-white p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="ri-more-2-fill"></i>
                                                </button>
                                                <ul class="dropdown-menu" style="cursor:pointer;">
                                                    <li>
                                                        <a data-bs-toggle="modal" data-bs-target="#editGenre-@genre.Id" class="dropdown-item">
                                                            Edit
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#deleteGenre-@genre.Id">
                                                            Delete
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">No genres found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end mt-3">
                        @Html.PagedListPager(Model, page => Url.Action("GenreList", new { page, searchQuery = Context.Request.Query["searchQuery"] }),
                                 new PagedListRenderOptions
                        {
                            LiElementClasses = new[] { "page-item", "custom-page-item" },
                            PageClasses = new[] { "page-link", "custom-page-link" }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("~/Areas/Admin/Views/Book/Genre/NewGenre.cshtml")
@await Html.PartialAsync("~/Areas/Admin/Views/Book/Genre/EditGenre.cshtml")
@await Html.PartialAsync("~/Areas/Admin/Views/Book/Genre/DeleteGenre.cshtml")
