@model X.PagedList.IPagedList<test.Entity.User>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "User Management";
    ViewData["Navigation Title"] = "User Management";

    var selectedRole = Context.Request.Query["roleFilter"].ToString();

}

<div class="row mt-5 g-3">
    <div class="col-12">
        <div class="row g-0">
            <div class="col-12 col-md-12 col-xl-12 mb-2 text-end align-items-center">
                <div class="d-flex justify-content-end h-100">
                    <a data-bs-toggle="modal" data-bs-target="#registerUser"
                       class="btn bg-color3 text-color4 px-3 border-0 d-flex justify-content-center align-items-center"
                       title="Register New User"
                       style="border-radius: 15px;">
                        <i class="ri-add-circle-line"></i>
                        <span class="ms-1 fw-bold d-sm-block d-none">Register</span>
                    </a>

                </div>
            </div>
        </div>
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                @await Html.PartialAsync("~/Views/Shared/Partials/_ToastNotification.cshtml")
                <form asp-action="Index" method="get" class="row align-items-center">
                    <div class="row align-items-center">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="input-group">
                                <button type="submit" class="input-group-text bg-color3"><i class="ri-search-line"></i></button>
                                <input type="text" name="searchQuery" class="form-control" placeholder="Search by Name or Username" value="@Context.Request.Query["searchQuery"]">
                            </div>
                        </div>

                        <div class="col-md-3 mb-3 mb-md-0">
                            <select class="form-select" name="roleFilter">
                                <option value="">Sort by Role</option>
                                <option value="Admin" selected="@(selectedRole == "Admin")">Admin</option>
                                <option value="Librarian" selected="@(selectedRole == "Librarian")">Librarian</option>
                            </select>
                        </div>
                        <div class="col-md-2 text-md-end">
                            <button type="submit" class="btn bg-color3 w-100 d-flex align-items-center justify-content-center">
                                <i class="ri-filter-line me-1"></i> Apply Filters
                            </button>
                        </div>
                    </div>
                </form>
                <div class="table-responsive mt-3 w-100">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Created At</th>
                                <th><i class="ri-settings-line"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.Name</td>
                                    <td>@user.Username</td>
                                    <td>@user.Email</td>
                                    <td>@user.Role</td>
                                    <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn bg-white p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="ri-more-2-fill"></i>
                                            </button>
                                            <ul class="dropdown-menu" style="cursor:pointer;">
                                                <li>
                                                    <a data-bs-toggle="modal" data-bs-target="#resetPass-@user.Id" class="dropdown-item">
                                                        Reset Password
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end mt-3">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new
                            {
                                page,
                                searchQuery = Context.Request.Query["searchQuery"],
                                roleFilter = Context.Request.Query["roleFilter"]
                            }),
                                 new PagedListRenderOptions
                        {
                            LiElementClasses = new[] { "page-item", "custom-page-item" },
                            PageClasses = new[] { "page-link", "custom-page-link" }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("~/Areas/Admin/Views/User/Register.cshtml")
@await Html.PartialAsync("~/Areas/Admin/Views/User/ResetPassword.cshtml")