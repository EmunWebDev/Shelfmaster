<div class="modal fade" id="registerUser" tabindex="-1" aria-labelledby="registerUser" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registerUser">Register User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form method="post" asp-action="Register">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="Name" class="form-label fw-bold">Name</label>
                        <input id="Name" type="text" class="form-control" name="Name" placeholder="Enter name" required />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label fw-bold">Email Address</label>
                        <input id="Email" type="text" class="form-control" name="Email" placeholder="Enter email address" required />
                    </div>
                    <div class="mb-3">
                        <label for="Role" class="form-label fw-bold">Role</label>
                        <select id="Role" name="Role" class="form-control" required>
                            <option value="" disabled selected>Select a role</option>
                            <option value="Admin">Admin</option>
                            <option value="Librarian">Librarian</option>
                            @* <option value="Cashier">Cashier</option> *@
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn bg-color1" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn bg-color3 fw-bold">Register User</button>
                </div>
            </form>
        </div>
    </div>
</div>

