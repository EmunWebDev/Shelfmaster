@model test.Areas.Admin.Models.ManualPenaltyViewModel

@{
    ViewData["Title"] = "Set Penalty";
}

<div class="row mt-4">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4>Set Penalty for Transaction #@Model.TransactionId</h4>
                <p><strong>Borrower:</strong> @Model.BorrowerName</p>
                <p><strong>Book:</strong> @Model.BookTitle</p>
                <p><strong>Reason:</strong> @Model.Reason</p>

                @if (Model.SuggestedAmount.HasValue)
                {
                    <div class="alert alert-info">
                        Suggested market price:
                        <strong>@($"PHP {Model.SuggestedAmount.Value:N2}")</strong>
                    </div>
                }

                <!-- ISBN Search -->
                <div class="mb-3">
                    <label for="isbnSearch" class="form-label">Search ISBN</label>
                    <div class="input-group">
                        <input type="text" id="isbnSearch" class="form-control" value="@Model.ISBN" placeholder="Enter ISBN" />
                        <button type="button" id="btnSearchPrice" class="btn btn-outline-primary">Check Price</button>
                    </div>
                    <small class="form-text text-muted">Enter ISBN to fetch market price from eBay</small>
                </div>

                <div id="priceResult" class="alert alert-info d-none"></div>

                <form asp-action="ManualPenalty" asp-area="Admin" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="TransactionId" />
                    <input type="hidden" asp-for="Reason" />

                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label">Penalty Amount (PHP)</label>
                        <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="TransactionsIndex" asp-area="Admin" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            Save Penalty & Mark @Model.Reason
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("btnSearchPrice").addEventListener("click", function () {
            const isbn = document.getElementById("isbnSearch").value;
            if (!isbn) {
                alert("Please enter an ISBN.");
                return;
            }

            fetch(`/Admin/Lending/GetBookPrice?isbn=${isbn}`)
                .then(response => response.json())
                .then(data => {
                    const resultDiv = document.getElementById("priceResult");
                    resultDiv.classList.remove("d-none");

                    if (data.success) {
                        resultDiv.innerHTML = `Suggested Price: <strong>PHP ${data.price.toFixed(2)}</strong>`;
                        // Auto-fill penalty input
                        document.getElementById("Amount").value = data.price.toFixed(2);
                    } else {
                        resultDiv.innerHTML = `<span class="text-danger">${data.message}</span>`;
                    }
                })
                .catch(err => console.error(err));
        });
    </script>
}
