@model X.PagedList.IPagedList<test.Areas.Admin.Models.OverdueViewModel>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Overdue Tracking";
    ViewData["Navigation Title"] = "Overdue Tracking";
}

<div class="row mt-5 g-3">
    <div class="col-12">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                @await Html.PartialAsync("~/Views/Shared/Partials/_ToastNotification.cshtml")
                <form asp-action="OverdueIndex" method="get">
                    <div class="row align-items-center">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="input-group">
                                <button type="button" class="input-group-text bg-color3" id="search"><i class="ri-search-line"></i></button>
                                <input type="text" name="searchQuery" class="form-control" placeholder="Search by Borrower or Copy No." value="@Context.Request.Query["searchQuery"]">
                            </div>
                        </div>
                        <div class="col-md-3 mb-3 mb-md-0">
                            <select class="form-select" name="overdueDaysFilter">
                                <option value="">Sort by Overdue Days</option>
                                <option value="7" selected="@(Context.Request.Query["overdueDaysFilter"] == "7")">7+ Days</option>
                                <option value="14" selected="@(Context.Request.Query["overdueDaysFilter"] == "14")">14+ Days</option>
                                <option value="30" selected="@(Context.Request.Query["overdueDaysFilter"] == "30")">30+ Days</option>
                            </select>
                        </div>

                        <div class="col-md-3 mb-3 mb-md-0">
                            <input type="date" name="dueDateFilter" class="form-control" value="@Context.Request.Query["dueDateFilter"]">
                        </div>

                        <div class="col-md-2 text-md-end">
                            <button class="btn bg-color3 w-100 d-flex align-items-center justify-content-center">
                                <i class="ri-filter-line me-1"></i> Apply Filters
                            </button>
                        </div>
                    </div>
                </form>
                <div class="table-responsive mt-3 w-100">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Borrower</th>
                                <th>Copy No. of Book</th>
                                <th>Due Date</th>
                                <th>Overdue Days</th>
                                <th>Calculated Fine</th>
                                <th><i class="ri-settings-line"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var overdue in Model)
                                {
                                    <tr>
                                        <td>@overdue.Id</td>
                                        <td>@overdue.BorrowerName</td>
                                        <td><span>@overdue.CopyNumber</span> - @overdue.BookTitle</td>
                                        <td>@overdue.DueDate.ToString("MM/dd/yyyy")</td>
                                        <td>@overdue.OverdueDays</td>
                                        <td>
                                            @overdue.FineAmount.ToString("C")
                                            @if (overdue.TransactionStatus == "Completed")
                                            {
                                                <span class="badge bg-success">Paid</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn bg-white p-0 border-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="ri-more-2-fill"></i>
                                                </button>
                                                @if (overdue.TransactionStatus != "Completed")
                                                {                                               
                                                <ul class="dropdown-menu" style="cursor:pointer;">
                                                    <li><a asp-controller="Lending" asp-action="SendReminder" asp-route-id="@overdue.TransactionID" class="dropdown-item">Send Reminder</a></li>
                                                    <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#returnAndPayFine-@overdue.Id">Return & Pay Fine</a></li>
                                                </ul>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">No overdue books found.</td>
                                </tr>
                            }  
                        </tbody>
                    </table>
                    <div class="d-flex justify-content-end mt-3">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new
                            {
                                page,
                                searchQuery = Context.Request.Query["searchQuery"],
                                dueDateFilter = Context.Request.Query["dueDateFilter"],
                                overdueDaysFilter = Context.Request.Query["overdueDaysFilter"],
                            }),
                                 new PagedListRenderOptions
                        {
                            LiElementClasses = new[] { "page-item", "custom-page-item" },
                            PageClasses = new[] { "page-link", "custom-page-link" }
                        })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("~/Areas/Admin/Views/Lending/Modals/Return&PayFine.cshtml")
