@foreach (var transaction in Model)
{
    <div class="modal fade" id="markLost-@transaction.Id" tabindex="-1" aria-labelledby="markLost" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="markLost">Mark Book as Lost</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-controller="Lending" asp-action="MarkAsLost">
                    <div class="modal-body">
                        <input type="hidden" name="Id" value="@transaction.Id" />
                        <p>Are you sure you want to mark this book as <strong>Lost</strong>?</p>
                        <p><strong>Borrower: </strong>@transaction.BorrowerName</p>
                        <p><strong>Book: </strong>@transaction.BookTitle</p>

                        <div class="alert alert-warning">
                            <strong>Note:</strong> Marking this book as lost may incur a penalty fee.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn bg-color1" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn bg-danger text-white fw-bold">Confirm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
