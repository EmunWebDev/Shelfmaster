@foreach (var borrower in Model)
{
    <div class="modal fade" id="deleteModal-@borrower.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Borrower's Account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-controller="Borrower" asp-action="Delete" method="post">
                <div class="modal-body">
                        <input type="hidden" name="Id" value="@borrower.Id" />
                        <p>Are you sure you want to delete this account? This account and all of the associated transaction records will be deleted
                            <span class="fw-bold text-danger">permanently</span>.
                        </p>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn bg-color1" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" id="deleteButton">Delete Account</button>
                </div>
                </form>
            </div>
        </div>
    </div>
}